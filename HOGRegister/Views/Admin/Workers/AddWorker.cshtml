@{
    Layout = "~/Views/Shared/DetailsLayout.cshtml";
    ViewBag.Title = "Add Worker";
}
<!-- InnerPage breadcrumb begin -->
<section id="apus-breadscrumb" class="breadcrumb-page apus-breadscrumb ">
    <div class="container">
        <div class="wrapper-breads">
            <div class="wrapper-breads-inner">
                <div class="breadscrumb-inner flex-middle-sm clearfix">
                    <div class="ali-right">
                        <h2 class="bread-title">ADD WORKER</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- InnerPage breadcrumb end -->
<!-- InnerPage content lists begin -->
<section id="main-contianer" class="main-content container inner">
    <div class="form-cover">
        <form method="get" action="#" class="job-alert-form-reform">
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Title</label>
                <input type="text" name="title" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">First Name</label>
                <input type="text" name="first_name" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Middle Name</label>
                <input type="text" name="mid_name" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Last Name</label>
                <input type="text" name="last_name" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Phone</label>
                <input type="number" name="phone" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Email</label>
                <input type="email" name="email" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Address</label>
                <input type="text" name="address" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Gender</label>
                <input type="radio" name="gender" value="male" class="form-control" id="job_alert_form_widget-4_title">
                <input type="radio" name="gender" value="female" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Unit</label>
                <select>
                    <option value="fad">FAD</option>
                    <option value="media">MEDIA</option>
                    <option value="tag">TAG</option>
                </select>
            </div>
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Overview</label>
                <textarea name="overview" maxlength="200" placeholder="max of 200 words..." class="form-control" id="job_alert_form_widget-4_title"></textarea>
            </div>
            <div class="form-group">
                <label for="job_alert_form_widget-4_email_frequency">Responsibilities</label>
                <textarea name="resp" maxlength="200" placeholder="separate responsibilities with a new line" class="form-control" id="job_alert_form_widget-4_title"></textarea>

            </div><!-- /.form-group -->
            <div class="form-group">
                <button class="button">Save Job Alert</button>
            </div><!-- /.form-group -->
        </form>
    </div>
</section>
<!-- InnerPage content lists end -->