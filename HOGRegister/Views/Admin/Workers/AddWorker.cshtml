@model HOGRegister.Models.Worker
@{
    Layout = "~/Views/Shared/DetailsLayout.cshtml";
    ViewBag.Title = "Add Worker";
}
<!-- InnerPage breadcrumb begin -->
<section id="apus-breadscrumb" class="breadcrumb-page apus-breadscrumb ">
    <div class="container">
        <div class="wrapper-breads">
            <div class="wrapper-breads-inner">
                <div class="breadscrumb-inner flex-middle-sm clearfix">
                    <div class="ali-right">
                        <h2 class="bread-title">ADD WORKER</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- InnerPage breadcrumb end -->
<!-- InnerPage content lists begin -->
<section id="main-contianer" class="main-content container inner">
    <div class="form-cover">
        <form method="post" action="~/Admin/AddWorker" class="job-alert-form-reform">
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Title</label>
                <input type="text" name="Title" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_first_name">First Name</label>
                <input type="text" name="Firstname" class="form-control" id="job_alert_form_widget-4_first_name" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_mid_name">Middle Name</label>
                <input type="text" name="Midname" class="form-control" id="job_alert_form_widget-4_mid_name">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Last Name</label>
                <input type="text" name="Lastname" class="form-control" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Phone</label>
                <input type="number" name="Phone" class="form-control" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_email">Email</label>
                <input type="email" name="Email" class="form-control" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Address</label>
                <input type="text" name="Address" class="form-control" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Gender</label>
                <div>
                    <label class="radio-inline"><input type="radio" name="Gender" value="female" class="input-radio" id="job_alert_form_widget-4_title" required>Female</label>
                    <label class="radio-inline"><input type="radio" name="Gender" value="male" class="input-radio" id="job_alert_form_widget-4_title" required>Male</label>
                </div>
            </div>

            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Role</label>
                <div>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Admin)" class="input-radio" id="job_alert_form_widget-4_title" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Admin)</label>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Leader)" class="input-radio" id="job_alert_form_widget-4_title" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Leader)</label>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Worker)" class="input-radio" id="job_alert_form_widget-4_title" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Worker)</label>
                </div>
            </div>

            <div class="filter-listing-form">
                <div class="form-group form-group-category toggle-field  tax-checklist-field">
                    <label class="heading-label"> Unit <i class="fa fa-angle-down" aria-hidden="true"></i></label>
                    <div class="form-group-inner" style="display: block;">
                        @if (ViewBag.Units != null || ViewBag.Units.Count() > 0)
                        {
                            <input type="hidden" name="Units" id="UnitId" />
                            <ul class="terms-list circle-check level-0">
                                @foreach (var unit in ViewBag.Units)
                                {
                                    <li class="list-item">
                                        <div class="list-item-inner">
                                            <input id="@unit.Name" type="checkbox" name="units" value=@unit.Id>
                                            <label for="@unit.Name">@unit.Name</label>
                                        </div>
                                    </li>
                                    @*@Html.HiddenFor(m => unit.Id);
                                @Html.HiddenFor(m => unit.Name);*@
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="button">
                Next
                <i class="next flaticon-right-arrow"></i>
            </button>
            </div><!-- /.form-group -->
        </form>
    </div>
</section>
<!-- InnerPage content lists end -->
