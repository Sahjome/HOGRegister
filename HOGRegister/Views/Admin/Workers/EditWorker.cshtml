@model HOGRegister.Models.Worker

@{
    Layout = "~/Views/Shared/DetailsLayout.cshtml";
    ViewBag.Title = "Edit Worker Profile";
}
<!-- InnerPage breadcrumb begin -->
<section id="apus-breadscrumb" class="breadcrumb-page apus-breadscrumb ">
    <div class="container">
        <div class="wrapper-breads">
            <div class="wrapper-breads-inner">
                <div class="breadscrumb-inner flex-middle-sm clearfix">
                    <div class="ali-right">
                        <h2 class="bread-title">EDIT WORKER</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- InnerPage breadcrumb end -->
<!-- InnerPage content lists begin -->
<section id="main-contianer" class="main-content container inner">
    <div class="form-cover">
        <form method="post" action="~/Admin/EditWorker" class="job-alert-form-reform">
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Title</label>
                <input type="text" name="title" class="form-control" value="@string.Format(@"{0}", Model.Title ?? string.Empty)" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">First Name</label>
                <input type="text" name="Firstname" class="form-control" value="@string.Format(@"{0}", Model.Firstname ?? string.Empty)" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Middle Name</label>
                <input type="text" name="mid_name" class="form-control" value="@string.Format(@"{0}", Model.Midname ?? string.Empty)" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Last Name</label>
                <input type="text" name="Lastname" class="form-control" value="@string.Format(@"{0}", Model.Lastname ?? string.Empty)" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Phone</label>
                <input type="number" name="Phone" class="form-control" value="@string.Format(@"{0}", Model.Phone ?? string.Empty)" id="job_alert_form_widget-4_title" required>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Email</label>
                <input type="email" name="Email" class="form-control" value="@string.Format(@"{0}", Model.Email ?? string.Empty)" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Address</label>
                <input type="text" name="Address" class="form-control" value="@string.Format(@"{0}", Model.Address ?? string.Empty)" id="job_alert_form_widget-4_title" required>
            </div>
            <input type="hidden" name="Gender" value="@Model.Gender" />
            <input type="hidden" name="Id" value="@Model.Id" />
           
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Status</label>
                <div>
                    <label class="radio-inline"><input type="radio" name="Status" value="@((int)HOGRegister.Models.WorkerStatus.Active)" class="input-radio" id="job_alert_form_widget-4_title" checked ="@(Model.Status == (int)HOGRegister.Models.WorkerStatus.Active)">Activate</label>
                    <label class="radio-inline"><input type="radio" name="Status" value="@((int)HOGRegister.Models.WorkerStatus.Inactive)" class="input-radio" id="job_alert_form_widget-4_title"  checked ="@(Model.Status == (int)HOGRegister.Models.WorkerStatus.Inactive)">Deactivate</label>
                    <label class="radio-inline"><input type="radio" name="Status" value="@((int)HOGRegister.Models.WorkerStatus.Suspended)" class="input-radio" id="job_alert_form_widget-4_title"  checked ="@(Model.Status == (int)HOGRegister.Models.WorkerStatus.Suspended)">Suspend</label>
                    <label class="radio-inline"><input type="radio" name="Status" value="@((int)HOGRegister.Models.WorkerStatus.Disabled)" class="input-radio" id="job_alert_form_widget-4_title"  checked ="@(Model.Status == (int)HOGRegister.Models.WorkerStatus.Disabled)">Disable</label>
                </div>
            </div>
            
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Role</label>
                <div>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Admin)" class="input-radio" id="job_alert_form_widget-4_title" checked ="@(Model.Status == (int)HOGRegister.Models.UserRole.Admin)" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Admin)</label>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Leader)" class="input-radio" id="job_alert_form_widget-4_title" checked ="@(Model.Status == (int)HOGRegister.Models.UserRole.Leader)" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Leader)</label>
                    <label class="radio-inline"><input type="radio" name="Role" value="@((int)HOGRegister.Models.UserRole.Worker)" class="input-radio" id="job_alert_form_widget-4_title" checked ="@(Model.Status == (int)HOGRegister.Models.UserRole.Worker)" required>@string.Format(@"{0}", HOGRegister.Models.UserRole.Worker)</label>
                </div>
            </div>

            <div class="filter-listing-form">
                <div class="form-group form-group-category toggle-field  tax-checklist-field">
                    <label class="heading-label"> Unit <i class="fa fa-angle-down" aria-hidden="true"></i></label>
                    <div class="form-group-inner" style="display: block;">
                        @if (ViewBag.Units != null || ViewBag.Units.Count() > 0)
                            {
                            <input type="hidden" name="Units" id="UnitId" />
                            <ul class="terms-list circle-check level-0">
                                @foreach (var unit in ViewBag.Units)
                            {
                                    <li class="list-item">
                                        <div class="list-item-inner">
                                            @if ((Model.Units != null || Model.Units.Count() > 0) && Model.Units.FirstOrDefault(x => x.Id == unit.Id) != null)
                                            {
                                                <input id="@unit.Name" type="checkbox" name="units" value=@unit.Id checked>
                                                <label for="@unit.Name">@unit.Name</label>
                        }
                                            else
                                            {
                                                <input id="@unit.Name" type="checkbox" name="units" value=@unit.Id>
                                                <label for="@unit.Name">@unit.Name</label>
                    }

                                        </div>
                                    </li>
                                    @*@Html.HiddenFor(m => unit.Id);
                                @Html.HiddenFor(m => unit.Name);*@
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="button">Save Unit</button>

                @*<button type="submit" class="btn btn-theme btn-login register apus-user-register">
                Next
                <i class="next flaticon-right-arrow"></i>
            </button>*@
            </div><!-- /.form-group -->
        </form>
    </div>
</section>
<!-- InnerPage content lists end -->
