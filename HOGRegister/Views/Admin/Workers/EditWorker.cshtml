@{
    Layout = "~/Views/Shared/DetailsLayout.cshtml";
    ViewBag.Title = "Edit Worker Profile";
}
<!-- InnerPage breadcrumb begin -->
<section id="apus-breadscrumb" class="breadcrumb-page apus-breadscrumb ">
    <div class="container">
        <div class="wrapper-breads">
            <div class="wrapper-breads-inner">
                <div class="breadscrumb-inner flex-middle-sm clearfix">
                    <div class="ali-right">
                        <h2 class="bread-title">EDIT WORKER</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- InnerPage breadcrumb end -->
<!-- InnerPage content lists begin -->
<section id="main-contianer" class="main-content container inner">
    <div class="form-cover">
        <form method="get" action="#" class="job-alert-form-reform">
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Title</label>
                <input type="text" name="title" class="form-control" value="Miss" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">First Name</label>
                <input type="text" name="first_name" class="form-control" value="Claire" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Middle Name</label>
                <input type="text" name="mid_name" class="form-control" value="Oge" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Last Name</label>
                <input type="text" name="last_name" class="form-control" value="Harry" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Phone</label>
                <input type="number" name="phone" class="form-control" value="2349084321843" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Email</label>
                <input type="email" name="email" class="form-control" value="email@domain.tld" id="job_alert_form_widget-4_title">
            </div><!-- /.form-group -->
            <div class="form-group">
                <label for="job_alert_form_widget-4_title">Address</label>
                <input type="text" name="address" class="form-control" value="Satellite Town, Lagos." id="job_alert_form_widget-4_title">
            </div>
            <div class="form-group">
                <label for="job_alert_form_widget-4_email_frequency">Unit</label>
                <select name="unit" class="form-control select2-hidden-accessible" id="job_alert_form_widget-4_email_frequency" tabindex="-1" aria-hidden="true">
                    <option value="">Select Unit</option>
                    <option value="fad">FAD</option>
                    <option value="media">MEDIA</option>
                    <option value="tag">TAG</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-theme btn-login register apus-user-register">
                    Next
                    <i class="next flaticon-right-arrow"></i>
                </button>
            </div><!-- /.form-group -->
        </form>
    </div>
</section>
<!-- InnerPage content lists end -->