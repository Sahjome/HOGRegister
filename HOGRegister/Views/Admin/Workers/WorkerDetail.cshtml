@model HOGRegister.Models.Worker
@{
    Layout = "~/Views/Shared/DetailsLayout.cshtml";
    ViewBag.Title = "Worker Detail";
}


<!-- InnerPage menu header begin -->
<section id="apus-breadscrumb" class="breadcrumb-page apus-breadscrumb ">
    <div class="container">
        <div class="wrapper-breads">
            <div class="wrapper-breads-inner">
                <div class="breadscrumb-inner flex-middle-sm clearfix">
                    <div class="ali-right">
                        <h2 class="bread-title">Worker Detail</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- InnerPage menu header end -->
<!-- InnerPage content lists begin -->
<section class="detail-version-v2">
    <section id="primary" class="content-area container inner">
        <div id="main" class="site-main content" role="main">

            <div class="single-listing-wrapper" data-latitude=" 48.877794" data-longitude="2.335403">
                <article id="post-259" class="job-single-v2 post-259 job_listing type-job_listing status-publish hentry job_listing_type-full-time job_listing_category-education-training job_listing_location-paris">
                    <div class="row content-job-detail-2">
                        <div class="col-xs-12">
                            <!-- heading -->
                            <div class="job-detail-header job-detail-header-v2 clearfix">
                                <div class="employer-logo-wrapper-v2">
                                    <div class="left-inner">
                                        <div class="job-detail-thumbnail">
                                            <img width="120" height="120" src="~/Content/Images/06/client-1-150x150.jpg" class="attachment-thumbnail size-thumbnail wp-post-image" alt="" sizes="(max-width: 120px) 100vw, 120px" />
                                        </div>
                                    </div>
                                    <div class="inner-info">
                                        <h1 class="job-detail-title">@string.Format(@"{0} {1} {2} {3}", Model.Title, Model.Firstname, Model.Midname,  Model.Lastname).Replace("  ", " ")</h1>
                                        <div class="candidate-job"> Senior Pastor</div>
                                    </div>
                                </div>

                                <!--bio-data begin-->
                                <div class="job-information clearfix">
                                    <ul class="list-detail-candidate">
                                        <li>
                                            <div class="job-phone"> <i class="fa fa-user-circle-o"></i> @Model.Gender </div>
                                        </li>
                                        <li>
                                            <div class="job-phone"> <i class="fa fa-phone"></i> @Model.Phone </div>
                                        </li>
                                        <li>
                                            <div class="job-email"> <i class="ti-email"></i> @string.Format(@"{0}", Model.Email ?? string.Empty)</div>
                                        </li>
                                        <li>
                                            <div class="job-location"> <i class="flaticon-location-pin"></i>@string.Format(@"{0}", Model.Address ?? string.Empty) </div>
                                        </li>
                                        <li>
                                            <div class="job-deadline with-icon"> <i class="fa fa-calendar-check-o"></i> @string.Format(@"{0}", (HOGRegister.Models.UserRole)Model.Role)</div>
                                        </li>
                                    </ul>
                                </div>
                                <!--bio-data end-->
                                <!--units begin-->
                                <div class="detail-wrapper">
                                    <div class="detail-wrapper-header-reform">
                                        <h5>Units/FCs</h5>
                                    </div>
                                    <div>
                                        @if (Model.Units != null || Model.Units.Count > 0)
                                        {
                                            <ul class="list-detail-candidate">
                                                @foreach (var unit in Model.Units)
                                                {
                                                <li class="col-sm-6 col-md-3 col-xs-12">
                                                    <div class="job-location">
                                                        <i class="fa fa-minus"></i>
                                                        <a href="~/Admin/UnitDetail/@unit.Id">@Html.DisplayFor(item => unit.Name)</a>
                                                    </div>
                                                </li>
                                                }
                                                
                                            </ul>

                                        }
                                    </div>
                                </div>
                                <!--units begin-->

                            </div>
                        </div>
                       
                    </div>
                </article>
            </div>
        </div>
    </section>
</section>
<!-- InnerPage content lists end -->